<Grid Margin="8" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
        <TextBlock Text="Organization:" VerticalAlignment="Center" Margin="0,0,6,0"/>
        <ComboBox x:Name="OrgReportOrgSelect" Width="280" DisplayMemberPath="Name" SelectedValuePath="Id"/>
        <Button x:Name="OrgReportRefreshOrgs" Content="Refresh" Width="90" Margin="6,0,0,0"/>
    </StackPanel>
    
    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
        <CheckBox x:Name="OrgRptIncludeDevices" Content="Include Device Counts" IsChecked="True" Margin="0,0,12,0"/>
        <CheckBox x:Name="OrgRptIncludeLocations" Content="Include Per-Location Breakdown" IsChecked="True" Margin="0,0,12,0"/>
        <CheckBox x:Name="OrgRptIncludeM365" Content="Include Microsoft 365 Report" Margin="0,0,12,0"/>
        <CheckBox x:Name="OrgRptOpenAfter" Content="Open After Generate" IsChecked="True"/>
    </StackPanel>
    
    <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,8">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <CheckBox x:Name="OrgRptSaveHtml" Content="Save HTML" IsChecked="True" Margin="0,0,12,0"/>
            <TextBox x:Name="OrgRptHtmlPath" Width="320" Margin="0,0,4,0"/>
            <Button x:Name="OrgRptBrowseHtml" Content="Browse..." Width="80" Margin="0,0,16,0"/>
            <CheckBox x:Name="OrgRptDiagnostics" Content="Diagnostics" Margin="0,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox x:Name="OrgRptEmail" Content="Email Report" Margin="0,0,12,0"/>
            <TextBox x:Name="OrgRptEmailTo" Width="320" Margin="0,0,4,0"/>
        </StackPanel>
    </StackPanel>
    
    <TextBox x:Name="OrgReportLog" Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
             TextWrapping="Wrap" IsReadOnly="True" FontFamily="Consolas" 
             Background="{DynamicResource App.Background.Secondary}" BorderBrush="{DynamicResource App.Border}"/>
    
    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
        <Button x:Name="OrgReportGenerate" Content="Generate" Width="110"/>
        <Button x:Name="OrgReportCancel" Content="Cancel" Width="90" Margin="6,0,0,0" IsEnabled="False"/>
        <ProgressBar x:Name="OrgReportProgress" Width="160" Height="16" Margin="12,0,0,0" Visibility="Collapsed" IsIndeterminate="False"/>
        <TextBlock x:Name="OrgReportStatus" Text="Ready to generate organization report" Margin="12,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>
</Grid>
