<Grid Margin="8" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- Report Configuration -->
    <GroupBox Header="Report Configuration" Grid.Row="0" Margin="0,0,0,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Report Title:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
            <TextBox x:Name="ReportTitleTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                     Text="Active Directory Report" Margin="4"/>
            
            <TextBlock Text="Company Logo:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
            <TextBox x:Name="CompanyLogoTextBox" Grid.Row="1" Grid.Column="1" 
                     Margin="4" ToolTip="URL or UNC path to company logo"/>
            <Button x:Name="BrowseCompanyLogo" Grid.Row="1" Grid.Column="2" Content="Browse..." 
                    Width="75" Margin="4"/>
            
            <TextBlock Text="Right Logo:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
            <TextBox x:Name="RightLogoTextBox" Grid.Row="2" Grid.Column="1" 
                     Text="https://www.psmpartners.com/wp-content/uploads/2017/10/porcaro-stolarek-mete.png"
                     Margin="4" ToolTip="URL or UNC path to right-side logo"/>
            <Button x:Name="BrowseRightLogo" Grid.Row="2" Grid.Column="2" Content="Browse..." 
                    Width="75" Margin="4"/>
            
            <TextBlock Text="Save Path:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
            <TextBox x:Name="SavePathTextBox" Grid.Row="3" Grid.Column="1" 
                     Text="C:\Automation\" Margin="4"/>
            <Button x:Name="BrowseSavePath" Grid.Row="3" Grid.Column="2" Content="Browse..." 
                    Width="75" Margin="4"/>
        </Grid>
    </GroupBox>
    
    <!-- Report Parameters -->
    <GroupBox Header="Report Parameters" Grid.Row="1" Margin="0,0,0,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="4">
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Inactive Users (days):" Width="140" VerticalAlignment="Center"/>
                    <TextBox x:Name="DaysTextBox" Text="30" Width="60" 
                             ToolTip="Users that have not logged in X days or more"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="New Users (days):" Width="140" VerticalAlignment="Center"/>
                    <TextBox x:Name="UserCreatedDaysTextBox" Text="7" Width="60" 
                             ToolTip="Users created within X days"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="4">
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Password Expire (days):" Width="140" VerticalAlignment="Center"/>
                    <TextBox x:Name="PasswordExpireDaysTextBox" Text="7" Width="60" 
                             ToolTip="Users with passwords expiring within X days"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Modified Objects (days):" Width="140" VerticalAlignment="Center"/>
                    <TextBox x:Name="ModifiedDaysTextBox" Text="3" Width="60" 
                             ToolTip="AD objects modified within X days"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </GroupBox>
    
    <!-- Options -->
    <GroupBox Header="Options" Grid.Row="2" Margin="0,0,0,8">
        <StackPanel Orientation="Horizontal">
            <CheckBox x:Name="AutoOpenCheckBox" Content="Open report after generation" 
                      IsChecked="True" Margin="8,4"/>
            <CheckBox x:Name="EnableDetailedLogsCheckBox" Content="Enable detailed logging" 
                      IsChecked="False" Margin="16,4"/>
        </StackPanel>
    </GroupBox>
    
    <!-- Actions and Status -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
        <Button x:Name="GenerateButton" Content="Generate AD Report" Width="150" Height="32" 
                Background="{DynamicResource App.Button.Primary.Background}" 
                Foreground="{DynamicResource App.Button.Primary.Foreground}"/>
        <Button x:Name="RefreshButton" Content="Refresh Settings" Width="120" Height="32" Margin="8,0,0,0"/>
        <ProgressBar x:Name="ReportProgress" Width="200" Height="20" Margin="16,0" 
                     Visibility="Collapsed" IsIndeterminate="True"/>
        <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
            <TextBlock x:Name="StatusTextBlock" Text="Ready to generate report" 
                       Foreground="{DynamicResource App.Foreground}"/>
            <TextBlock x:Name="LastReportTextBlock" Text="Last Report: Never" 
                       FontSize="10" Foreground="{DynamicResource App.Foreground.Secondary}"/>
        </StackPanel>
    </StackPanel>
    
    <!-- Report Preview/Log -->
    <GroupBox Header="Activity Log" Grid.Row="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4">
                <TextBlock Text="Report Generation Status:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="DetailedStatusTextBlock" Text="No report generation in progress" 
                           FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground.Secondary}"/>
                <Button x:Name="ClearLogButton" Content="Clear Log" Width="80" HorizontalAlignment="Right" 
                        Margin="8,0,0,0"/>
            </StackPanel>
            
            <TextBox x:Name="ActivityLogTextBox" Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" IsReadOnly="True" 
                     FontFamily="Consolas" FontSize="11" Margin="4"
                     Background="{DynamicResource App.Background.Secondary}" 
                     BorderBrush="{DynamicResource App.Border}"/>
        </Grid>
    </GroupBox>
</Grid>